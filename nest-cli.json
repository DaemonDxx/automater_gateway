{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../config/*.yaml",
        "outDir": "./dist/config"
      },
      {
        "include": "../proto/*.proto",
        "outDir": "./dist/proto"
      }
    ],
    "watchAssets": true
  }
}
